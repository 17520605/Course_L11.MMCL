<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tutorial_v1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppTheme">

        <activity android:name="Activity.GetStartedActivity"></activity>
        <activity android:name="Activity.ForgotPasswordActivity"></activity>
        <activity android:name="Activity.UserInfoActivity"></activity>
        <activity android:name="Activity.RegisterActivity"></activity>
        <activity android:name="Activity.HomeActivity"></activity>
        <activity android:name="Activity.ChangePasswordActivity"></activity>
        <activity android:name="Activity.ChangePasswordSuccessfulActivity"></activity>
        <activity android:name="Activity.UploadAvatarActivity"></activity>
        <activity android:name="Activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="Activity.AccountSettingActivity"></activity>
        <activity android:name="Activity.ActiveAccountActivity"></activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />



</manifest>