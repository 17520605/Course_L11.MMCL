<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackground">

    <ImageView
        android:id="@+id/accountFrag_user_avatar"
        android:layout_width="87dp"
        android:layout_height="84dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.105"
        app:srcCompat="@drawable/account_fragment_useravatar" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/personal" />

    <TextView
        android:id="@+id/accountFrag_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="92dp"
        android:fontFamily="sans-serif"
        android:text="Nguyễn Hữu Minh Khai"
        android:textColor="#000"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/accountFrag_user_avatar"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/account_setting"
        android:layout_width="365dp"
        android:layout_height="47dp"
        android:layout_marginTop="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/acountsetting" />

    <ImageView
        android:id="@+id/course_created"
        android:layout_width="365dp"
        android:layout_height="47dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_setting"
        app:srcCompat="@drawable/yourpassword_1" />

    <ImageView
        android:id="@+id/course_buy"
        android:layout_width="365dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_created"
        app:srcCompat="@drawable/yourpassword" />
    <ImageView
        android:id="@+id/home_account_changepassword_btn"
        android:layout_width="365dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_buy"
        app:srcCompat="@drawable/changepass" />
    <ImageView
        android:id="@+id/payment_history"
        android:layout_width="365dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_account_changepassword_btn"
        app:srcCompat="@drawable/paymenthistory" />
    <ImageView
        android:id="@+id/contact_support"
        android:layout_width="365dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_history"
        app:srcCompat="@drawable/help" />
    <ImageView
        android:id="@+id/account_account_logout_btn"
        android:layout_width="365dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_support"
        app:srcCompat="@drawable/logout" />
    <ImageView
        android:id="@+id/version"
        android:layout_width="365dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_account_logout_btn"
        app:srcCompat="@drawable/vesion" />

    <ImageView
        android:id="@+id/active_btn"
        android:layout_width="28dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/accountFrag_user_avatar"
        app:layout_constraintTop_toBottomOf="@+id/accountFrag_user_name"
        app:srcCompat="@drawable/active_icon" />
    <ImageView
        android:id="@+id/nonactive_btn"
        android:layout_width="28dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/accountFrag_user_avatar"
        app:layout_constraintTop_toBottomOf="@+id/accountFrag_user_name"
        app:srcCompat="@drawable/noactive_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>